package frontend

templ layout(title string, err error) {
	<!DOCTYPE html>
	<html class="h-100" lang="de">
		<head>
			<meta charset="utf-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<title>{ title } - .inder</title>
			<link
				href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
				rel="stylesheet"
				integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
				crossorigin="anonymous"
			/>
			<link rel="stylesheet" href="static/styles.css"/>
		</head>
		<body class="d-flex flex-column h-100">
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container">
					<a class="navbar-brand" href="/">.inder</a>
					<button
						class="navbar-toggler"
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#navbarSupportedContent"
						aria-controls="navbarSupportedContent"
						aria-expanded="false"
						aria-label="Toggle navigation"
					>
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link" href="/orders">Bestellungen</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/menus">Men√ºs</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/admin">Admin</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
			<main class="flex-shrink-0">
				if err == nil {
					{ children... }
				} else {
					<div class="container my-5">
						<h1>Error</h1>
						<p>{ err.Error() }</p>
					</div>
				}
			</main>
			<footer class="footer mt-auto py-3 bg-body-tertiary">
				<div class="container">
					<a class="nav-link" href="https://gitlab.com/sfz.aalen/hackwerk/dotinder" target="_blank">
						<span class="text-body-secondary">
							.inder - Chicken Masala legende Wollmilchsau
						</span>
					</a>
				</div>
			</footer>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
			<script src="https://unpkg.com/htmx.org@1.9.10"></script>
		</body>
	</html>
}
